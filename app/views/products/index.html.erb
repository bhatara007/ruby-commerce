<br>

<p class="text-success"><%= flash[:success].html_safe unless flash[:success].blank? %></p>
<p class="text-danger"><%= flash[:error].html_safe unless flash[:error].blank? %></p>

<h3 class="font-weight-bold">Products</h3>
<%= link_to 'New Product', new_product_path %>

<table class="table table-striped">
  <thead class="thead-light">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Title</th>
    <th scope="col">Desc</th>
    <th scope="col">Stock</th>
    <th scope="col">Command</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= product.stock %></td>
      <td>
        <li class="text-primary"><%= link_to 'Show', product %></li>
        <li class="text-success'"><%= link_to 'Edit', edit_product_path(product) %></li>
        <li class="text-danger"><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

