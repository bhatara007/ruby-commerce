<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_area :title %>
  </div>

  <div>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Category",) %>
  </div>
  <br>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
  </div>

  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>
  <br>

  <div class="field">
    <strong><p>Primary image</p></strong>
    <% if product.primary_image.attached? %>

      <%= image_tag product.primary_image , width: "200px" , height: "200px" %> <br>
      <%= link_to 'Remove', delete_image_attachment_product_url(product.primary_image.id),
                  method: :delete%>
    <% end %>
    <br>
    <br>
    <%=  form.file_field :primary_image %>

  </div>



  <div class="field">
    <strong><p>Supporting images</p></strong>
    <% if @product.supporting_images.attached? %>
      <% @product.supporting_images.each do |image| %>
        <%= image_tag image , width: "100px" , height: "100px" %>
        <%= link_to 'Remove', delete_image_attachment_product_url(image.id),
                    method: :delete%>
      <%end%>
    <%end%>
    <br>
    <br>
    <%= form.file_field :supporting_images, multiple: true%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
