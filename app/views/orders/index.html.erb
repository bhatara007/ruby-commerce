<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Customer name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to Product.find(order.product_id).title, admins_product_path(order.product_id) %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
